<footer class="site-footer container">
    <div class="footer-inner">
        <div class="footer-left">
            <div class="copyright">
                {{@site.title}} Â© {{date format="YYYY"}}
            </div>
        </div>

        <nav class="footer-nav">
            {{navigation type="secondary"}}
            <a class="menu-item badge" href="{{@site.url}}" target="_self" rel="noopener noreferrer">Published by Juan Carrillo</a>
        </nav>

        <div class="footer-right">
            <div class="social">
                {{#if @site.facebook}}
                    <a class="social-item social-item-facebook"
                        href="{{facebook_url @site.facebook}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Facebook">
                        {{> icons/facebook}}
                    </a>
                {{/if}}

                {{#if @site.twitter}}
                    <a class="social-item social-item-twitter"
                        href="{{twitter_url @site.twitter}}" target="_blank"
                        rel="noopener noreferrer" aria-label="Twitter">
                        {{> icons/twitter}}
                    </a>
                {{/if}}

                <a class="social-item" href="https://github.com/juancarrillofl" target="_blank"
                    rel="noopener noreferrer" aria-label="GitHub">
                    {{> icons/github}}
                </a>

                <a class="social-item" href="https://www.linkedin.com/in/juancarrillofl" target="_blank"
                    rel="noopener noreferrer" aria-label="Linkedin">
                    {{> icons/linkedin}}
                </a>
            </div>
        </div>
    </div>
</footer>